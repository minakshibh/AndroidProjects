<!--                    android:layout_width="50dp" -->
<!--                    android:layout_height="25dp" -->
<!--                    android:layout_alignParentRight="true" -->
<!--                    android:layout_alignParentTop="true" -->
               
<!--                    android:layout_marginTop="10dp" -->
