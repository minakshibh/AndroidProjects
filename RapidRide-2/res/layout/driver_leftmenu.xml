<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:mySwitch="http://schemas.android.com/apk/res-auto"
        android:id="@+id/driver_left_drawer"
        android:layout_width="150dp"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/flyout_margin_top"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="-35dp"
        android:orientation="vertical"
        android:background="#FFFFFF" >

    <ImageView
        android:id="@+id/imageView_driverpic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/image_border"
        android:src="@drawable/profilepic" />

    <TextView
        android:id="@+id/textView_drivername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="drivername" />

 <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
             >
       <TextView
           android:id="@+id/textView_reuestarray"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="100dp"
           android:textColor="@color/red"
            />

 	<Button
 	    android:id="@+id/button_requsts"
 	    android:layout_width="match_parent"
 	    android:layout_height="wrap_content"
 	    android:gravity="left"
 	    android:padding="5dp"
 	    android:textSize="15sp"
        android:layout_alignParentTop="true"
 	    android:background="@color/transparent"
 	    android:text="REQUESTS" />

     </RelativeLayout>
           <Button
            android:id="@+id/bt_query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="5dp"
            android:textSize="15sp"
            android:background="@color/transparent"
            android:text="MY QUEUE"
            android:layout_marginTop="-5dp"
            android:textColor="#000000" />

    <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content" 
               android:gravity="left"
               android:layout_marginTop="-5dp"
  					>
               <Button
                  android:id="@+id/button_rp_driver"
                  android:layout_width="80dp"
                  android:layout_height="40dp"
                  android:gravity="left"
                  android:layout_marginTop="5dp"
                  android:layout_marginLeft="6dp"
                  android:textSize="15sp"
                  android:background="@color/transparent"
                  android:text="DRIVER" />
               
    <com.rapidride.MySwitch
                style="@style/mySwitchStyle"
                android:id="@+id/toggleButton_rp_driver_on_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
            	android:layout_marginRight="5dp"
                android:layout_marginTop="4dp"
                    mySwitch:pushStyle="true"
                    mySwitch:textOnThumb="false"
                    mySwitch:thumbExtraMovement="7dp"
                    mySwitch:trackTextPadding="1dp"
                    mySwitch:thumb="@drawable/white_toggle"
                    mySwitch:track="@drawable/sright_background_copy_sm"
                    mySwitch:leftBackground="@drawable/sright_background_copy_sm"
                    mySwitch:rightBackground="@drawable/whitess"
                    mySwitch:backgroundMask="@drawable/sright_background_copy_sm"
           />
               
               
               

<!--                <ToggleButton -->
