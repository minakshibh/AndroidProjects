<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/corner_round_darkblue" >


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
 <ImageView
     android:id="@+id/imageView_riderpic"
     android:layout_width="50dp"
     android:layout_height="50dp"
     android:layout_marginLeft="5dp"
     android:layout_marginTop="5dp"
     android:src="@drawable/profilepic" />
    
    <LinearLayout
   	android:layout_marginLeft="10dp"
    android:layout_width="60dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    >
<TextView
        android:id="@+id/textView_drivername1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textSize="10sp" />
<TextView
        android:id="@+id/textView_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating"
        android:textColor="@color/white"
         android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textSize="10sp" />
</LinearLayout>

    <TextView
        android:id="@+id/textView_destination1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="destination"
        android:layout_gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="10sp" />

    
    
    <LinearLayout
  
    android:layout_width="60dp"
    android:layout_height="match_parent"
  	android:layout_marginTop="0dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textView_tripid1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Requesttype"
        android:textColor="@color/red"
          android:layout_gravity="center_horizontal"
        android:textSize="10sp" />
  <TextView
        android:id="@+id/textViewLocationInfoWindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PICKUP"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:textSize="10sp" />
    
    <TextView
        android:id="@+id/textView_pickuptime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pickup"
        android:textColor="@color/yellow"
        android:layout_gravity="center_horizontal"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView_pickuptime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:textColor="@color/yellow"
        android:layout_gravity="center_horizontal"
        android:textSize="12sp" />

    </LinearLayout>
    
    
</LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="0.3dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="2dp"
    android:background="@color/white">
</LinearLayout>
</LinearLayout>