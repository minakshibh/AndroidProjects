  <RelativeLayout
            android:id="@+id/rel_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
             android:layout_marginTop="-10dp"
             >

            <Button
                android:id="@+id/button_show"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@color/transparent"
                android:gravity="left"
           		android:layout_marginLeft="10dp"
           		android:textSize="15sp"
                android:text="HOME  " 
              />
            
         <com.rapidride.MySwitch
                    style="@style/mySwitchStyle"
                    android:id="@+id/toggleButton_showalert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    mySwitch:pushStyle="true"
                    mySwitch:textOnThumb="false"
                    mySwitch:thumbExtraMovement="-1dp"
                    mySwitch:trackTextPadding="1dp"
                    mySwitch:thumb="@drawable/white_toggle"
                    mySwitch:track="@drawable/whitess"
                    
                    mySwitch:leftBackground="@drawable/whitess"
                    mySwitch:rightBackground="@drawable/greenss"
                    mySwitch:backgroundMask="@drawable/whitess"
           />

