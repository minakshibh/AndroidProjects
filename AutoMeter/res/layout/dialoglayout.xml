<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#f8f8f8">
    
      <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
    	android:padding="5dp"   
    	android:background="#000000" 
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:id="@+id/dialogHeaderText"
            android:text="Auto Meter"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold"
            android:adjustViewBounds="true"/>
    </RelativeLayout>
      
      <TextView
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:text="* Please enter valid details."
          android:paddingLeft="10dp"
           android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="2dp"
	    	android:layout_below="@+id/header"
          android:id="@+id/hint"
          android:textColor="#ff0000"
          android:visibility="gone"
          />
      <EditText
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
	    	android:layout_marginBottom="2dip"
	    	android:singleLine="true"
	    	android:layout_below="@+id/hint"
	    	android:maxLength="4"
	    	android:textSize="25sp"
	    	android:padding="10dp"
	    	android:id="@+id/txtDetail"
	    	android:background="#ffffff"
	    	android:inputType="number"
	    	android:hint="Enter Vehicle Details"
	    	android:visibility="gone"
          />
      
      <LinearLayout   
        android:id="@+id/setting"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/header"
	    android:layout_marginBottom="2dip"
	    android:padding="10dip"
	    android:gravity="center_horizontal"
	    android:orientation="horizontal">
         
     <LinearLayout        
        android:layout_width="0dp"
        android:layout_weight="1" 
        android:layout_height="wrap_content"
        android:id="@+id/first"
        android:orientation="vertical"  
        android:layout_margin="5dip"         
        android:gravity="center_horizontal">
    
    <ImageView
        android:id="@+id/arrowupfirstbtn"  
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"              
        android:clickable="true" 
        android:padding="15dip"  
        android:background="@drawable/up_arrow_hover"/>
    
    <TextView android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="0"
        android:id="@+id/txtfirst"      
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dip"
        android:textSize="30sp"
        android:textColor="@android:color/black"/>
    
      <ImageView
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"         
        android:id="@+id/arrowdownfirstbtn"  
        android:clickable="true"   
        android:padding="15dip"
        android:background="@drawable/down_arrow_hover"/>
    
    </LinearLayout>
    
             
     <LinearLayout 
        android:id="@+id/second" 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"       
        android:orientation="vertical" 
        android:layout_margin="5dip"        
        android:gravity="center_horizontal">
    
    <ImageView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:id="@+id/arrowupsecondtbtn"              
        android:clickable="true"     
        android:padding="15dip"      
        android:background="@drawable/up_arrow_hover"       
        />
    
    <TextView android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:textColor="@android:color/black"
        android:text="0"
        android:padding="10dip"
        android:id="@+id/txtSecond"         
        android:textStyle="bold"       
        android:gravity="center"
         android:textSize="30sp"/>
    
     <ImageView
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"    
        android:id="@+id/arrowdownsecondbtn"              
        android:clickable="true" 
        android:padding="15dip" 
        android:background="@drawable/down_arrow_hover"/>
    
    </LinearLayout>
    
     <LinearLayout
        android:id="@+id/dialog_03"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"      
        android:orientation="vertical" 
        android:layout_margin="5dip" 
        android:gravity="center_horizontal">
    
    <ImageView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:id="@+id/arrowup_03tbtn"              
        android:clickable="true"     
        android:padding="15dip"     
        android:background="@drawable/up_arrow_hover"       
        />
    
    <TextView android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:textColor="@android:color/black"
        android:text="0"
        android:padding="10dip"
        android:id="@+id/txt_03"    
        android:textStyle="bold"       
        android:gravity="center"
         android:textSize="30sp"/>
    
     <ImageView
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"    
        android:id="@+id/arrowdown_03btn"              
        android:clickable="true" 
        android:padding="15dip"  
        android:background="@drawable/down_arrow_hover"/>
    
    </LinearLayout>
    
     <LinearLayout
        android:id="@+id/dialog_04"
       android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"      
        android:orientation="vertical" 
        android:layout_margin="5dip"  
        android:gravity="center_horizontal">
    
    <ImageView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:id="@+id/arrowup_04tbtn"              
        android:clickable="true"     
        android:padding="15dip"        
        android:background="@drawable/up_arrow_hover"       
        />
    
    <TextView android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:textColor="@android:color/black"
        android:text="0"
        android:padding="10dip"
        android:id="@+id/txt_04"         
        android:textStyle="bold"       
        android:gravity="center"
         android:textSize="30sp"/>
    
     <ImageView
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"    
        android:id="@+id/arrowdown_04btn"              
        android:clickable="true" 
        android:padding="15dip" 
        android:background="@drawable/down_arrow_hover"/>
    
    </LinearLayout>
    
    </LinearLayout>
    
      <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_below="@+id/setting"
    >
    <Button 
    android:layout_width="0dp"
    android:layout_height="60dp"
    android:layout_weight="1"
    android:padding="10dp"
    android:textSize="20sp"
    android:gravity="center"
    android:textStyle="bold"
    android:background="#000000"
    android:textColor="#ffffff"
    android:text="Cancel"
     android:id="@+id/cancelbtn" 
     android:onClick="cancelListener"
    />
    <Button 
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_marginLeft="1dp"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:textSize="20sp"
    android:textColor="#ffffff"
    android:background="#000000"
    android:textStyle="bold"
    android:gravity="center"
    android:text="Set"
    android:id="@+id/setvaluelbtn"
    android:onClick="OkListener"
    />
</LinearLayout>

