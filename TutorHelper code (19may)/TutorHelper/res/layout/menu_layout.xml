<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <include
            layout="@layout/header_layout"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_centerVertical="true"
        
            android:layout_marginRight="10dp"
            android:src="@drawable/menudot_icon" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/menuLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#535353"
        android:visibility="invisible"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/connectionRequests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Connection Requests"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/studentRequests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Student Requests"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" />
       
        
          <TextView
            android:id="@+id/lessonRequests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Lesson Requests"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" />
              
          
        <TextView
            android:id="@+id/mystu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="My Student"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" />
          
           <TextView
            android:id="@+id/myLesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="My Lessons"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" />
            
       
        <TextView
            android:id="@+id/myProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="My Profile"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" />
         <TextView
            android:id="@+id/tuterList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Tuter List"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" />
         <TextView
            android:id="@+id/Parentmerge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Parent Merge"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" />
         
         <TextView
            android:id="@+id/Studentmerge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Student Merge"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/logOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Logout"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" />
       
         
    </LinearLayout>

</LinearLayout>